{
  "name": "momwhatsapps",
  "version": "1.0.0",
  "description": "Texting with Mom. Based on Real Events.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "rimraf dist && gulp build",
    "clean": "gulp clean",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text-summary npm t",
    "coverage:check": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "docs:sass": "sassdoc app/styles/",
    "predocs": "rimraf docs",
    "docs": "npm run docs:sass",
    "lint:js": "eslint gulpfile.babel.js tests/**/*.js app/**/*.js",
    "lint:sass": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "start": "gulp serve",
    "pretest": "npm run lint:js && npm run lint:sass",
    "test": "mocha tests/** --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yairodriguez/momwhatsapps.git"
  },
  "keywords": [
    "Whatsapp",
    "Novel",
    "RWD",
    "Sass",
    "HTML5"
  ],
  "author": "Yair <@imyairodriguez>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yairodriguez/momwhatsapps/issues"
  },
  "homepage": "https://github.com/yairodriguez/momwhatsapps#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "del": "^2.2.2",
    "eslint": "^3.12.2",
    "exorcist": "^0.4.0",
    "ghooks": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-cache": "^0.4.5",
    "gulp-clean-css": "^2.3.2",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-pug": "^3.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.0.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.9.1",
    "gulp-uglify": "^2.0.0",
    "gulp-useref": "^3.1.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.1.1",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.10.2",
    "sass-true": "^2.1.3",
    "sassdoc": "^2.1.20",
    "sassdoc-theme-neat": "0.0.2",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.8.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm t"
    }
  },
  "nyc": {
    "exclude": [
      "tests/"
    ]
  }
}
